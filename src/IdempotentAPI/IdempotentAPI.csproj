<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Neoilx.IdempotentAPI</PackageId>
        <TargetFrameworks>netstandard2.0;netstandard2.1;net8.0</TargetFrameworks>
        <Description>IdempotentAPI is an ASP.NET Core attribute by which any HTTP write operations (POST and PATCH) can have effect only once for the given request data. (neoilx fork with ContentLength fix)</Description>
        <PackageTags>idempotent api;idempotency;asp.net core;attribute;middleware;rest</PackageTags>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <!-- For netstandard, use the package reference (brings in transitive dependencies) -->
    <ItemGroup Condition="$(TargetFramework.StartsWith('netstandard'))">
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    </ItemGroup>

    <!-- For modern .NET, use the shared framework (no transitive Newtonsoft.Json) -->
    <ItemGroup Condition="!$(TargetFramework.StartsWith('netstandard'))">
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="System.Text.Json" Version="8.0.5" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\IdempotentAPI.AccessCache\IdempotentAPI.AccessCache.csproj" />
    </ItemGroup>

</Project>
